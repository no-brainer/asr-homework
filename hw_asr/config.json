{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "QuartzNetModel",
    "args": {
      "n_feats": 128,
      "m_quartz_blocks": 5,
      "r_conv_blocks": 5,
      "channel_nums": [256, 256, 256, 512, 512, 512, 512, 1024],
      "kernel_sizes": [ 33,  33,  39,  51,  63,  75,  87,    1]
    }
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 32,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 1e-1,
      "betas": [0.95, 0.5],
      "weight_decay": 1e-2
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 51,
      "epochs": 55,
      "anneal_strategy": "cos",
      "max_lr": 1e-1,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 55,
    "len_epoch": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": -1,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "grad_norm_clip": 10
  }
}
